@model List<ProductViewModel>

<h1>Список изделий</h1>

<form asp-controller="Product" asp-action="Index" method="get">
    <input type="text" name="filter" placeholder="Фильтр по наименованию">
    <button type="submit">Применить фильтр</button>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Наименование</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    <a href="#" data-toggle="modal" data-target="#productModal" data-id="@product.ID" data-name="@product.Name" data-description="@product.Description">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Модальное окно для добавления/редактирования изделия -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <!-- Контент модального окна здесь -->
</div>
